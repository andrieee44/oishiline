#!/usr/bin/env bash
set -e
if [[ ! -d "/data/data/com.termux.nix/files/home/oishiline" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/data/data/com.termux.nix/files/home/oishiline")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/data/data/com.termux.nix/files/home/oishiline" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/data/data/com.termux.nix/files/home/oishiline/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/data/data/com.termux.nix/files/home/oishiline/.envrc" "/data/data/com.termux.nix/files/home/oishiline/.direnv"/*.rc
